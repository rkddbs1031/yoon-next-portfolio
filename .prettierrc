{
  "overrides": [
    {
      "files": "*.tsx",
      "options": {
        "arrowParens": "avoid",
        "jsxSingleQuote": true,
        "singleQuote": true,
        "semi": true,
        "bracketSpacing": true,
        "useTabs": false,
        "tabWidth": 2,
        "trailingComma": "all",
        "printWidth": 120,
        "endOfLine": "auto"
      }
    },
    {
      "files": "*.ts",
      "options": {
        "arrowParens": "avoid",
        "jsxSingleQuote": true,
        "singleQuote": true,
        "semi": true,
        "bracketSpacing": true,
        "useTabs": false,
        "tabWidth": 2,
        "trailingComma": "all",
        "printWidth": 120,
        "endOfLine": "auto"
      }
    },
    {
      "files": "*.css",
      "options": {
        "singleQuote": false,
        "semi": true,
        "useTabs": true,
        "tabWidth": 1
      }
    }
  ]
}
